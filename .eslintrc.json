{
    "parser": "babel-eslint",
    "extends": ["airbnb", "prettier", "prettier/react"],
    "plugins": ["react", "prettier"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "max-len": [
            2,
            {
                "code": 120,
                "tabWidth": 4,
                "ignoreStrings": true
            }
        ],
        "no-plusplus": "off",
        "no-console": "off",
        "comma-dangle": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
